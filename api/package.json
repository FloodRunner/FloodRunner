    "@nestjs/platform-express": "^7.0.9",
    "@nestjs/swagger": "^4.5.5",
    "agenda": "^3.1.0",
    "amqp-ts": "^1.8.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.1",
    "config": "^3.3.1",
    "copy-webpack-plugin": "^5.1.1",
    "js-yaml": "^3.13.1",
    "jwks-rsa": "^1.8.1",
